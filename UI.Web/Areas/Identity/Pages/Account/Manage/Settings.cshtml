@page
@model SettingsModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Settings;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <form id="profile-form" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="form-check form-switch mb-3">
            <input asp-for="Input.TwoColumns" class="form-check-input" type="checkbox" role="switch">
            <label asp-for="Input.TwoColumns" class="form-check-label">Items in zwei Spalten anzeigen</label>
            <span asp-validation-for="Input.TwoColumns" class="text-danger"></span>
        </div>

        <div class="form-floating">
            <input asp-for="Input.ReminderValue" type="number" class="form-control" />
            <label asp-for="Input.ReminderValue">Standard-Reminder (in Minuten)</label>
        </div>

        <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
