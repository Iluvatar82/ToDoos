@using  Common = global::ToDo.Data.Common;

<input type="checkbox" class="form-control col" @bind-value=Value.Montag />
<input type="checkbox" class="form-control col" @bind-value=Value.Dienstag />
<input type="checkbox" class="form-control col" @bind-value=Value.Mittwoch />
<input type="checkbox" class="form-control col" @bind-value=Value.Donnerstag />
<input type="checkbox" class="form-control col" @bind-value=Value.Freitag />
<input type="checkbox" class="form-control col" @bind-value=Value.Samstag />
<input type="checkbox" class="form-control col" @bind-value=Value.Sonntag />

<input type="time" class="form-control col" @bind-value=Value.Time />

@code {
    private Common.ScheduleWeekdays weekdaysValue;
    [Parameter]
    public Common.ScheduleWeekdays Value { get => weekdaysValue; set { if (value.ToString() == weekdaysValue?.ToString() || value == null) return; weekdaysValue = value; ValueChanged.InvokeAsync(value); }
}

    [Parameter]
    public EventCallback<Common.ScheduleWeekdays> ValueChanged { get; set; }
}
